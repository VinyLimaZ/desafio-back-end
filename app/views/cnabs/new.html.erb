<div class="section no-pad-bot" id="index-banner">
  <div class="container">
    <div row center>
      <blockquote>
        <span><%= flash[:success] || flash[:error] %></span>
      </blockquote>
    </div>
    <br><br>
    <div class="row center">
      <%= form_for @cnab, url: { action: 'upload' }, html: { class: 'col s12 form'} do |f| %>
        <div class="file-field input-field col s12">
          <div class="btn">
            <span>Selecionar CNAB</span>
            <%= f.file_field :file, accept: 'text/plain' %>
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
          </div>
        </div>
        <div class="col s12">
          <%= f.submit 'Cadastrar', class: 'btn left', data: { disable_with: 'Enviando...' } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
